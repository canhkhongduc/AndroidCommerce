<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="500dp">


    <TextView
        android:id="@+id/tvProductNameEditCart"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="21dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="25dp" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvPriceEditCart"
        android:layout_gravity="center"
        android:background="#ffc299" />

    <ImageView
        android:id="@+id/ivAddQuantity"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/view1"
        android:layout_marginTop="53dp"
        android:background="@color/colorPrimary"
        android:tint="@color/cardview_light_background"
        app:srcCompat="@drawable/ic_add_black_24dp" />

    <TextView
        android:id="@+id/tvPriceEditCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvProductNameEditCart"
        android:layout_centerHorizontal="true"
        android:text="Price"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/ivMinusQuantity"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/ivAddQuantity"
        android:background="@color/colorPrimary"
        android:tint="@color/cardview_light_background"
        app:srcCompat="@drawable/ic_remove_black_24dp" />

    <TextView
        android:id="@+id/tvQuantityEditCart"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/ivAddQuantity"
        android:layout_centerHorizontal="true"
        android:text="1"
        android:textAlignment="center"
        android:textSize="50sp" />

    <ImageView
        android:id="@+id/ivDone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tvProductNameEditCart"
        android:tint="@color/colorPrimary"
        app:srcCompat="@drawable/ic_done_black_24dp" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginBottom="148dp"
        android:background="#ffc299" />
</RelativeLayout>
