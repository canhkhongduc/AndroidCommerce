<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginTop="10dp"
    app:cardBackgroundColor="@android:color/holo_green_dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivAdminUserProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/user_default" />

        <TextView
            android:id="@+id/tvAdminUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_toEndOf="@+id/ivAdminUserProfile"
            android:text="Canh Khong"
            android:textColor="@color/cardview_light_background"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAdminUserEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvAdminUserName"
            android:layout_below="@+id/tvAdminUserName"
            android:layout_marginTop="11dp"
            android:text="canh.khong@gmail.com"
            android:textColor="@color/cardview_light_background" />

        <TextView
            android:id="@+id/tvAdminPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvAdminUserEmail"
            android:layout_below="@+id/tvAdminUserEmail"
            android:layout_marginTop="11dp"
            android:text="0985899602"
            android:textColor="@color/cardview_light_background" />

        <TextView
            android:id="@+id/tvAdminUserAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvAdminPhone"
            android:layout_below="@+id/tvAdminPhone"
            android:layout_marginTop="11dp"
            android:text="Hanoi"
            android:textColor="@color/cardview_light_background" />

        <TextView
            android:id="@+id/tvAdminUserId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvAdminUserEmail"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:text="1"
            android:textColor="@color/cardview_light_background"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/ibDeleteUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/tvAdminPhone"
            app:srcCompat="@drawable/delete" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
