<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fu.prm391.project.androidcommerce.activity.customer.CheckOutSuccessActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/tick"
        android:layout_marginTop="60dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank you"
        android:textColor="@color/colorPrimary"
        android:textSize="21sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank you for shopping with us!"
        android:textColor="#000"
        android:textSize="19dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"/>
    <Button
        android:id="@+id/btnCustomerViewOrderStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ORDER STATUS"
        android:background="@color/colorPrimary"
        android:textColor="@color/cardview_light_background"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textSize="20dp"/>
    <Button
        android:id="@+id/btnCustomerBackToShop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to shop"
        android:background="#003300"
        android:textColor="@color/cardview_light_background"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:textSize="20dp"/>
</LinearLayout>
